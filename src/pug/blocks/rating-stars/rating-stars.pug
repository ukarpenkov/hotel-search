mixin ratingStars(index)
  style
    include rating-stars.scss
  .rating
    .rating-stars
      input(id=`rating__${index+4}` type="radio" name=`rating__${index}` value=`${index+4}`).rating__star 
      label(for=`rating__${index+4}`).rating__label <span class="material-icons">star_border</span>
      input(id=`rating__${index+3}` type="radio" name=`rating__${index}` value=`${index+3}`).rating__star
      label(for=`rating__${index+3}`).rating__label <span class="material-icons">star_border</span>
