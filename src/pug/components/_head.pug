html
    head
        style
            include head.scss
            include form-elements.scss
        .header-wrapper
            .header
                .header__text-logo
                    a(href="index.html")
                        img(src="src/images/logo.png", alt="Logo").header__text-logo-img
                .header__nav-bar
                    nav.header__menu
                        ul.header__nav
                            li.header__nav-item
                                a(href="#").header__nav-link О нас
                            li.header__nav-item
                                a(href="#").header__nav-link Услуги 
                                span(class='material-icons expand-arrow header__arrow') expand_more 
                            li.header__nav-item
                                a(href="#").header__nav-link Вакансии
                            li.header__nav-item
                                a(href="#").header__nav-link Новости
                            li.header__nav-item
                                a(href="#").header__nav-link Соглашения
                                span(class='material-icons expand-arrow header__arrow') expand_more 
                    .header__buttons-items
                        .header__button
                            button.header__btn_small.btn_dark-violet войти
                        .header__button
                            button.header__btn_long.header__btn_fill-light-violet зарегистрироваться

                
            