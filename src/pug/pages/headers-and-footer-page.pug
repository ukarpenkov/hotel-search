                include ../components/_head
            .header-page__logged-in-header
                .header
                    .header__text-logo
                        a(href="index.html")
                            img(src="src/images/logo.png", alt="Logo").header__text-logo-img
                    .header__nav-bar
                        nav.header__logged-in-menu
                            ul.header__nav
                                li.header__nav-item
                                    a(href="#").header__nav-link О нас
